<div class="book-container">
<h2>{{title}}</h2>
<div class="table-responsive">
<form method="POST" action="/bookUsers/edit">
<table class="table">
  <thead>
    <tr>
      <th scope="col">Full Name</th>
      <th scope="col">Email</th>
      <th scope="col">ID Type</th>
      <th scope="col">Books Borrowed</th>
      <th scope="col">Issued Date</th>
      <th scope="col">Expected Return Date</th>
      <th scope="col">Actual Return Date</th>
      <th scope="col">Have to pay Fine?</th> 
      <th scope="col">Fine Amount</th>
    </tr>
  </thead>
  <tbody>

    <tr>
      <td><input type="text" name="fname" required value="{{data.fullName}}"
              placeholder="Enter Full Name"></td>
      <td><input type="email" name="femail" required value="{{data.email}}"
              placeholder="Enter Email"></td>
      <td><input type="text" name="fid" required value="{{data.idType}}"
              placeholder="Enter ID Type"></td>
        <td><select name="fbooks">
        <option>{{data.booksBorrowed}}</option>
        {{#each dropdown}}
        <option>{{this.title}}</option>
        {{/each}}
      </select></td>
      <td><input type="date" name="fIssuedDate"  value="{{data.issuedDate}}"
              placeholder="Enter Issued Date"></td>
      <td><input type="date" name="fExpectedReturnDate"  value="{{data.expectedReturnDate}}"
              placeholder="Enter Expected Return Date"></td>
        <td><input type="date" name="fActualReturnDate"  value="{{data.actualReturnDate}}"
              placeholder="Enter Actual Return Date"></td>
        <td><select name="fisFined">
          <option>NO</option>
          <option>YES</option>
        </select></td>
      <td><input type="text" name="ffineAmount"  value="{{data.fineAmount}}"
              placeholder="Enter Fine Amount"></td>
    </tr>
    <input type="hidden" name="id" value="{{data.id}}">
  </tbody>
  <tfooter>
    <tr>
        <td></td>
        <td>
            <input type="submit" value="Save" 
              class="btn btn-success">
           <a href="/bookUsers"><input type="button" value="Cancel" 
              class="btn btn-danger"></a>
        </td>
    </tr>
  </tfooter>
</table>
</form>
</div>
</div>